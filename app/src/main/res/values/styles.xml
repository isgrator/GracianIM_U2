<resources>

    <!-- Base application theme. -->

    <style name="TemaAsteroides" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:typeface">serif</item>
        <item name="android:textColor">#0000FF</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/EstiloBoton</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="TemaCalculadora" parent="TemaAsteroides">
        <item name="android:buttonStyle">@style/EstiloBoton.Calculadora</item>
        <item name="android:textSize">24sp</item>
        <item name="android:radioButtonStyle">@style/EstiloRadioBoton</item>
    </style>

    <style name="EstiloBoton" parent="@android:style/TextAppearance.Medium">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_green_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">324dp</item>
        <item name="android:layout_height">52dp</item>
        <!--<item name="android:padding">14dp</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EstiloBoton.Alternativo">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EstiloBoton.Calculadora">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="EstiloRadioBoton" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#999999</item>
    </style>



</resources>
