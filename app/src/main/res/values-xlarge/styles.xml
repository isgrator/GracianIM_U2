<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="TemaAsteroides" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:typeface">serif</item>
        <item name="android:textColor">#0000FF</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/EstiloBoton</item>

    </style>

    <style name="EstiloBoton" parent="@android:style/TextAppearance.Medium">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_green_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">324dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EstiloBoton.Alternativo">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/holo_green_light</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>