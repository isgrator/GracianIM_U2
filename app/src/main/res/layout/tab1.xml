<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/margen_botones"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/asteroides"
        android:textSize="25sp"
        android:id="@+id/TVAsteroides"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="87dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bjugar"
        style="@style/EstiloBoton.Alternativo"
        android:layout_height="52dp"

        android:layout_marginTop="8dp"
        android:text="@string/arrancar"
        app:layout_constraintTop_toBottomOf="@+id/TVAsteroides"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bconfigurar"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"

        android:text="@string/action_settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bjugar" />

    <Button
        android:id="@+id/bacercade"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:text="@string/acercade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bconfigurar" />

    <Button
        android:id="@+id/bsalir"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:text="@string/salir"

        app:layout_constraintTop_toBottomOf="@+id/bacercade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="432dp"
        tools:layout_editor_absoluteY="19dp"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>